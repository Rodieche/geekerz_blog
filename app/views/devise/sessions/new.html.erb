<h2 class="center teal-text bangers">Iniciar Sesion</h2>

<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <i class="material-icons prefix orange-text">email</i>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "white-text" %>
    </div>

    <div class="field">
      <i class="material-icons prefix orange-text">vpn_key</i>
      <%= f.label :password, "ContraseÃ±a" %><br />
      <%= f.password_field :password, autocomplete: "off", class: "white-text" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me,"Recordar cuenta", class: "white-text" %>
      </div>
    <% end -%>

    <div class="actions center margin-top">
      <%= f.submit "Inicia Sesion", class: "btn waves-effect waves-light teal accent-3 black-text" %>
    </div>
  <% end %>

  <div class="margin-top center bangers mediano">
    <%= render "devise/shared/links" %>
  </div>

  
  
</div>
