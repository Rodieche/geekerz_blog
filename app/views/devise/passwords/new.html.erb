<h2 class="center teal-text bangers">Olvido su contraseña</h2>

<div class="container">
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		<%= devise_error_messages! %>

		<div class="field">
			<%= f.label :email %><br />
			<%= f.email_field :email, autofocus: true, class: "white-text" %>
		</div>

		<div class="actions center">
			<%= f.submit "Enviar instruccion para cambiar contraseña", class: "btn waves-effect waves-light teal accent-3 black-text" %>
		</div>
	<% end %>

	<div class="margin-top center bangers mediano">
		<%= render "devise/shared/links" %>
	</div>

</div>